<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:clickable="true"
    android:id="@+id/list_item"
    android:focusable="true">

    <TextView
        android:id="@+id/list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/climbing_picture"
        android:text="@string/placeholder"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/list_item_ort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_name"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/list_ort"
        android:text="@string/placeholder" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/location"
        android:layout_alignTop="@id/list_item_ort"
        android:layout_below="@id/list_item_name"
        android:layout_alignStart="@id/list_item_name"
        android:id="@+id/list_ort" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_level"
        android:layout_alignStart="@id/list_item_name"
        android:layout_marginTop="8dp"
        android:layout_below="@id/list_ort"
        android:text="@string/level" />

    <TextView
        android:id="@+id/list_item_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/list_level"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/list_level"
        android:text="@string/placeholder" />

    <ImageButton
        android:id="@+id/add_favourite_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:background="#00ffffff"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_star_button" />


    <ImageView
        android:id="@+id/climbing_picture"
        android:layout_width="148dp"
        android:layout_height="196dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/climbing_collection2" />


</RelativeLayout>